<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Image Profle</title>
    <%- include("partials/head") -%>
</head>

<body>

    <%- include("partials/navigation") %>

    <div class="container p-4">
        <div class="container-imagen-editProfile">

            <!-- imagen mobile -->
            <div class="card animated fadeInDown card-profile-mobile">
                <img src="<%= image.url %>" class="card-img-top" alt="<%= image.filename %>">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= image.title %>
                    </h5>
                    <p class="card-descripcion">
                        <%= image.valor %>
                    </p>
                    <p class="card-descripcion">
                        <%= image.description %>
                    </p>
                    <p >
                        <%= format(image.created_at) %>
                    </p>
                    <a href="/image/delete/<%= image._id%>" class="btn btn-danger btn-block">
                        Delete Image
                    </a>
                </div>
            </div>

            <!-- imagen web -->
            <div class="card-profile-web container-editProfile">
                <img src="<%= image.url %>" class="editProfile-img" alt="<%= image.filename %>">
                <div class="editProfile-texto">
                    <h5 class="">
                        <%= image.title %>
                    </h5>
                    <p class="">
                        <%= image.valor %>
                    </p>
                    <p class="">
                        <%= image.description %>
                    </p>
                    <p >
                        <%= format(image.created_at) %>
                    </p>
                </div>
            </div>
        </div>
    </div>

</body>

</html>